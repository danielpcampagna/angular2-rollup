{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "target": "es2015",
      "module": "es2015",
      "stripInternal": true,
      "inlineSources": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "removeComments": true,
      "allowUnreachableCode": false
    },
    "angularCompilerOptions": {
        "skipMetadataEmit": false,
        "skipTemplateCodegen": false,
        "allowEmptyCodegenFiles": true,
        "entryModule": "./ngfactory/src/app/app.server.module#ServerAppModule"
    },
    "include": [
        "./ngfactory/src/app/app.server.module.ts"
    ],
    "exclude": [
        "./src/**"
    ]
}